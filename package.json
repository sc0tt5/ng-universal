{
  "name": "ng-universal",
  "version": "0.0.2",
  "author": "Scott Robertson (https://github.com/sc0tt5)",
  "license": "GPL-3.0",
  "private": false,
  "repository": "https://github.com/sc0tt5/ng-universal",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open --watch",
    "start:universal": "npm run build:ssr && npm run serve:ssr --open",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "e2e": "ng e2e",
    "doc": "rimraf tmp/documentation && compodoc -p tsconfig.app.json -d tmp/documentation -s -o",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server.js",
    "build:client-and-server-bundles": "ng build --prod && ng run ng-universal:server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors"
  },
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "@nguniversal/express-engine": "~8.1.1",
    "@nguniversal/module-map-ngfactory-loader": "~8.1.1",
    "angular-in-memory-web-api": "~0.9.0",
    "rxjs": "~6.5.3",
    "tslib": "~1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^8.3.2",
    "@angular-devkit/build-angular": "^0.802.1",
    "@angular/cli": "~8.2.1",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@angular/platform-server": "~8.2.14",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jest": "^24.0.23",
    "@types/node": "~10.12.0",
    "codelyzer": "~5.2.0",
    "jest": "^24.9.0",
    "jest-html-reporters": "^1.2.0",
    "jest-preset-angular": "^7.1.1",
    "protractor": "~5.4.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "~6.2.1",
    "ts-node": "~8.4.1",
    "tslint": "~5.20.1",
    "typescript": "^3.5.3",
    "webpack-cli": "~3.3.10"
  }
}
